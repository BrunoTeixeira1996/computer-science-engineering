<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reversi" parent="Theme.Reversi.Default">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dracula_purple</item>
        <item name="colorPrimaryVariant">@color/dracula_purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dracula_cyan</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorAccent">@color/dracula_purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dracula_background_light</item>
        <item name="android:colorBackground">@color/dracula_background_light</item>
        <item name="android:colorButtonNormal">@color/dracula_background_lighter</item>
        <item name="android:colorForeground">@color/dracula_foreground</item>
        <item name="android:textColor">@color/dracula_red</item>
        <item name="android:textColorPrimary">@color/dracula_foreground</item>
    </style>
</resources>