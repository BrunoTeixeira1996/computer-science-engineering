<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rascunhos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dracula_purple</item>
        <item name="colorPrimaryVariant">@color/dracula_purple</item>
        <item name="colorOnPrimary">@color/dracula_foreground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dracula_cyan</item>
        <item name="colorSecondaryVariant">@color/dracula_cyan</item>
        <item name="colorOnSecondary">@color/dracula_foreground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/background</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/comic_sans</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:background">@color/dracula_background</item>
    </style>
</resources>