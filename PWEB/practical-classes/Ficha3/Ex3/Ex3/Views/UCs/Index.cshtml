@model IEnumerable<Ex3.Models.UnidadeCurricular>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <h4>Unidades Curriculares</h4>
    <hr />
    <dl class="row">
        @foreach (var item in Model)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Nome) (@Html.DisplayFor(modelItem => item.ECTS))
            </dd>
        }
    </dl>
    
    <table class="table table-striped table-bordered table-responsive">
        <tr class="table-primary">
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Curso)</th>
            <th>@Html.DisplayNameFor(model => model.ECTS)</th>
            <th>@Html.DisplayNameFor(model => model.Semestre)</th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <th>@Html.DisplayFor(modelItem => item.Nome)</th>
                <th>@Html.DisplayFor(modelItem => item.Curso)</th>
                <th>@Html.DisplayFor(modelItem => item.ECTS)</th>
                <th>@Html.DisplayFor(modelItem => item.Semestre)</th>
            </tr>
        }
        
    </table>
</div>
